# Arabic Smart Scribe Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/arabic_smart_scribe
POSTGRES_DB=arabic_smart_scribe
POSTGRES_USER=scribe_user
POSTGRES_PASSWORD=secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=redis_secure_password

# API Keys (Store in Docker secrets for production)
GEMINI_API_KEY=your_gemini_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
SECRET_KEY=your_super_secure_secret_key_here
DEBUG=false
ENVIRONMENT=production

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
